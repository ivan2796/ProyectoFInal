<?xml version="1.0" encoding="utf-8"?>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_400m"
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:background="@drawable/img400mrun"
                android:text="@string/run400m"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

            <Button
                android:id="@+id/btn_3k"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/img3kmrun" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_10k"
                    android:layout_width="168dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:background="@drawable/img10kmrun"
                    style="@style/Widget.AppCompat.ButtonBar" />

                <Button
                    android:id="@+id/btn_5k"
                    android:layout_width="167dp"
                    android:layout_height="122dp"
                    android:layout_weight="1"
                    android:background="@drawable/img5kmrun"
                    style="@style/Widget.AppCompat.ButtonBar"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_21k"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/img21kmrun" />

        </LinearLayout>
    </ScrollView>
